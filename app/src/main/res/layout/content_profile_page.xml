<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.synchro.synchro_prototype01.ProfilePage"
    tools:showIn="@layout/app_bar_profile_page">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/profile_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingTop="110dp"
            android:paddingBottom="10dp"
            android:textSize="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/profile_name_view"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_faculty_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/faculty"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/profile_major_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_faculty_view"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/major"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/profile_modules_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_major_view"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/modules_taken"
                android:textSize="20dp"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>