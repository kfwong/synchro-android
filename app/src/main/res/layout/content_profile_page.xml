<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.synchro.synchro_model01.ProfilePage"
    tools:showIn="@layout/app_bar_profile_page">

    <!--need some framing, looks abit unnatural-->
    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fluffy_doggy"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_pic">
        <TextView
            android:id="@+id/profile_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Name: "/>

        <TextView
            android:id="@+id/profile_faculty_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_name_view"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Faculty: " />

        <TextView
            android:id="@+id/profile_major_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_faculty_view"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Major: "/>

        <TextView
            android:id="@+id/profile_modules_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_major_view"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Modules Taken: "/>
    </RelativeLayout>
</RelativeLayout>